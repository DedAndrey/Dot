## IMAP
set imap_user=dedikovav@yandex.ru
set imap_pass=password
set folder = imaps://dedikovav@imap.yandex.ru/
set spoolfile = +INBOX

## SMTP
set smtp_url=smtp://dedikovav@smtp.yandex.com:587/
set smtp_pass=password
set realname='Дедиков Андрей'
set from=dedikovav@yandex.ru
set hostname="yandex.ru"
set signature="С уважением, Дедиков А.В."

## Connection options
set ssl_starttls = yes
set ssl_force_tls = yes

