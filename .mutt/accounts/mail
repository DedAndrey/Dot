## IMAP
set imap_user=dedikov@list.ru
set imap_pass=password
set folder = imaps://dedikov@imap.mail.ru/
set spoolfile = +INBOX

## SMTP
set smtp_url=smtp://dedikov@smtp.mail.ru:587/
set smtp_pass=password
set realname='Дедиков Андрей'
set from=dedikov@list.ru
set hostname="mail.ru"
set signature="С уважением, Дедиков А.В."

## Connection options
set ssl_starttls = yes
set ssl_force_tls = yes

