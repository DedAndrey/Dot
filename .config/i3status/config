# –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏–µ –ø—Ä–æ—Ü–µ—Å—Å–∞ openvpn
# —Å–ª—É–∂–∏—Ç –∫–∞–∫ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä —Ä–∞–±–æ—Ç—ã openvpn –∫–ª–∏–µ–Ω—Ç–∞
# –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ openvpn –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ
# —É–∫–∞–∑—ã–≤–∞—Ç—å –ø–∞—Ä–∞–º–µ—Ç—Ä --writepid /var/run/openvpn.pid
run_watch openvpn {
    pidfile = "/var/run/openvpn.pid"
    format = "ÔïÇ openvpn"
    # –µ—Å–ª–∏ –ø–∞—Ä–µ–º–µ—Ç—Ä format_down –æ—Å—Ç–∞–≤–∏—Ç—å –ø—É—Å—Ç—ã–º,
    # —Ç–æ –ø—Ä–∏ –Ω–µ–∞–∫—Ç–∏–≤–Ω–æ–º –ø—Ä–æ—Ü–µ—Å—Å–µ –±–ª–æ–∫ –±—É–¥–µ—Ç –æ—Ç—Å—É—Ç—Å—Ç–≤–æ–≤–∞—Ç—å
    format_down=""
}

# –∞–Ω–∞–ª–æ–≥–∏—á–Ω—ã–π –±–ª–æ–∫ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä openconnect vpn –∫–ª–∏–µ–Ω—Ç–∞
# —Ç—Ä–µ–±—É–µ—Ç—Å—è –∑–∞–ø—É—Å–∫ –∫–ª–∏–µ–Ω—Ç–∞ —Å –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–º --pid-file=/var/run/openconnect.pid
run_watch openconnect {
    pidfile = "/var/run/openconnect.pid"
    format = "ÔÅÆ openconnect vpn"
    format_down=""
}

# —É–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –≥—Ä–æ–º–∫–æ—Å—Ç—å—é –∑–≤—É–∫–∞
volume master {
	format = "ÔÄ® %volume" # —à–∞–±–ª–æ–Ω –≥—Ä–æ–º–∫–æ—Å—Ç–∏ –≤ –∞–∫—Ç–∏–≤–Ω–æ–º —Å–æ—Å—Ç–æ—è–Ω–∏–∏
	format_muted = "Ôö© %volume" # —à–∞–±–ª–æ–Ω –≥—Ä–æ–º–∫–æ—Å—Ç–∏ –≤ —Å–æ—Å—Ç–æ—è–Ω–∏–∏ muted (–±–µ–∑ –∑–≤—É–∫–∞)
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

# –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä WIFI
wireless _first_ {
    # —à–∞–±–ª–æ–Ω –≤—ã–≤–æ–¥–∞, –º–æ–∂–Ω–æ –¥–æ–ø–æ–ª–Ω–∏—Ç—å
