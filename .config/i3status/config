    # –∏ ip –∞–¥—Ä–µ—Å–æ–º %ip
	format_up = "Ôá´%quality %frequency / %essid"
	format_down = "W: down"
}

# –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–≥–æ –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞
cpu_usage {
