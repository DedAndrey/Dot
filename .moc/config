# This is a configuration file for the MOC player. It should be named 'config'
# and placed in the directory ~/.moc/
# Comments begin with '#'.
# You can use quotes and escape ('\') in parameters.

# Внимание! при установке ReadTags = yes русские буквы в именах 
# файлов в некоторых случаях отображаются неверно.
ReadTags			= yes

MusicDir			= "~/Музыка"
Sort				= FileName
ShowStreamErrors	= no
Mp3IgnoreCRCErrors	= yes
Repeat				= yes
Shuffle				= no
AutoNext			= yes
#FormatString		= "%(n:%n :)%(a:%a - :)%(t:%t:)%(A: \(%A\):)"
FormatString		= "%(t:%t:)"
OutputBuffer		= 2048
InputBuffer			= 512
Prebuffering		= 64
Equalizer_SaveState	= yes
ShowHiddenFiles		= no
StartInMusicDir		= no
HideFileExtension	= yes
ShowFormat			= yes
ShowTime			= IfAvailable
# Внимание! темы оформления в относительных именах располагаются в 
# /usr/share/moc/themes/ или ~/.moc/themes/
Theme				= /home/dedandrey/.moc/themes/tty
# Theme				= /home/dedandrey/.moc/themes/alldefault
UseMmap				= no
ResampleMethod		= SincMediumQuality
TagsCacheSize		= 256
PlaylistNumbering	= no
# Установка формы представления
# menu(position_x, position_y, width, height)
Layout1				= playlist(0,0,100%,10):directory(0,10,100%,FILL)
# следовать за файлом воспроизведения
FollowPlayedFile	= yes
CanStartInPlaylist	= yes
QueueNextSongReturn	= yes
Keymap				= keymap
